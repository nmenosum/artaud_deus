%part
\renewcommand{\cftpartfont}{\color{blackk}\bfseries}   

\makeatletter
\newcommand\l@mypart[3]{%
  \vskip4ex%
  \par\hspace*{-1.2cm}
  \parbox{2em}{\hfill{\cftpartpagefont}}
  \hspace*{.8em}
  \parbox{\dimexpr\textwidth-5.5em-15pt\relax}{\cftpartfont#1}\par%
}

\renewcommand*\l@part[2]{%
  \l@mypart{#1}{#2}{\partname}%
}

%chapter
\renewcommand{\cftchapterpagefont}{\Fakt\small\bfseries}
\renewcommand{\cftchapterfont}{\Fakt\bfseries}   

\makeatletter
\newcommand\l@mychapter[3]{%
  \vskip1ex%
  \par\hspace*{-1.2cm}
  \parbox{2em}{\hfill{\cftchapterpagefont#2}}
  \hspace*{.8em}
  \parbox{\dimexpr\textwidth-4.5em-15pt\relax}{\cftchapterfont#1}\par%
}

\renewcommand*\l@chapter[2]{%
  \l@mychapter{#1}{#2}{\chaptername}%
}

%section

\newcommand\l@mysection[3]{%
  \vskip1ex%
  \par\hspace*{-1.2cm}
  \parbox{2em}{\hfill{\cftsectionpagefont}}
  \hspace*{1em}
  \parbox{\dimexpr\textwidth+.5em-15pt\relax}{\cftsectionfont#1}\par%
}

\renewcommand*\l@section[2]{%
  \l@mysection{#1}{#2}{\sectionname}%
}


\makeatother

